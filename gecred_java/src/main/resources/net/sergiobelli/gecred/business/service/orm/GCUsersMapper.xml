<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.sergiobelli.gecred.business.service.orm.GCUserMapper">

	<resultMap type="net.sergiobelli.gecred.model.User" id="user">
		<id column="id" property="id"/>
		<result column="username" property="username" />
		<result column="password" property="password"/>
	</resultMap>

  <select id="get" resultMap="user">
    select * from gc_users where id = #{id}
  </select>

  <select id="login" parameterType="java.util.Map" resultMap="user">
    select * from gc_users where username = #{username} and password = #{password}
  </select>
  
  <select id="list" resultMap="tipologia">
    select * from gc_users order by id asc
  </select>

</mapper>